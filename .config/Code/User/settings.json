{
    "vim.disableAnnoyingNeovimMessage": true,
    "files.autoSave": "afterDelay",
    "workbench.colorTheme": "Monokai",
    "python.pythonPath": "python3",

    "[latex]":
    {
        "editor.wordWrap": "on"
    },
    "[plaintext]":
    {
        "editor.wordWrap": "on"
    },
    "[markdown]":
    {
        "editor.wordWrap": "on"
    },
    "[biblatex]":
    {
        "editor.wordWrap": "on"
    },
    "files.associations":
    {
        "*.mmd": "latex"
    },
    "window.zoomLevel": 1,

    "cSpell.userWords":
    [
        "Autoregressive",
        "Bayesion",
        "covariance",
        "microcontrollers"
    ],
    "cSpell.ignoreRegExpList":
    [
        "\\\\\\w*(\\[.*?\\])?(\\{.*?\\})?",
        "\\$.+?\\$"
    ],
    "latex-workshop.latex.toolchain": [
        {
            "command": "latexmk",
            "args": [
                "--shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOC%"
            ]
        }
    ],
    "git.confirmSync": false,
    "matlab.mlintpath": "/usr/local/MATLAB/R2017a/bin/glnxa64/mlint",
    "cSpell.language": "en,en-US",
    "workbench.panel.location": "bottom"
}
